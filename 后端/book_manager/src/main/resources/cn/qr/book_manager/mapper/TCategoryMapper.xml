<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.qr.book_manager.mapper.TCategoryMapper">

    <resultMap id="BaseResultMap" type="cn.qr.book_manager.pojo.TCategory">
            <id property="categoryId" column="category_id" />
            <result property="categoryName" column="category_name" />
    </resultMap>

    <resultMap id="FullResultMap" type="cn.qr.book_manager.pojo.TCategory" extends="BaseResultMap">
        <collection property="bookList" resultMap="cn.qr.book_manager.mapper.TBookMapper.BaseResultMap" ofType="cn.qr.book_manager.pojo.TBook"/>
    </resultMap>

    <sql id="Base_Column_List">
        category_id,category_name
    </sql>

    <select id="selectCategoryAndBook" resultMap="FullResultMap">
        SELECT * FROM t_category tc LEFT JOIN t_book tb ON tc.category_id=tb.book_cid
    </select>
</mapper>
